<%- project_ids = Project.find(:all) %>
<p>
  <%= label_tag('settings[project_id]', l(:label_setting_project_id)) %>
  <%= select_tag('settings[project_id]', options_for_select([['', 0]] + project_ids.collect{|c| [c.name, c.id]}, (@settings['project_id'] || 0))) %>
</p>

